<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           x:Class="Client.MobileApp.Views.LicenseInputPopup"
           CanBeDismissedByTappingOutsideOfPopup="False"
           Size="300, 300">
    <VerticalStackLayout BackgroundColor="#FF6B00">
        <StackLayout Padding="20">
            <Entry x:Name="LicensePlateEntry" Placeholder="Nhập biển số xe" HorizontalOptions="FillAndExpand" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Text="OK" Clicked="OkButton_Clicked" />
                <Button Grid.Column="1" Text="Cancel" Clicked="CancelButton_Clicked" />
            </Grid>
        </StackLayout>
    </VerticalStackLayout>
</mct:Popup>