<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MobileApp.Views.VPS53"
             xmlns:viewmodel="clr-namespace:Client.MobileApp.ViewModels"
             x:DataType="viewmodel:VPS53ViewModel"
             Shell.NavBarIsVisible="False"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI">
    <ScrollView>

        <Grid>
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTapGestureRecognizerTapped"/>
            </Grid.GestureRecognizers>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="Loading" BackgroundColor="#A0808080" Grid.RowSpan="4">
                <ActivityIndicator 
                               Scale="0.2"
                               ZIndex="{Binding LoadingIndex}" 
                               IsRunning="{Binding IsBusy}" 
                               IsVisible="{Binding IsBusy}" 
                               Color="#83E9EE" 
                               VerticalOptions="FillAndExpand"
                               HorizontalOptions="FillAndExpand"
                               />
            </Grid>

            <Grid Grid.Row="0" 
                  BackgroundColor="#83E9EE"
                  ZIndex="{Binding CameraIndex}">

                <Image Source="logo.png"/>

            </Grid>

            <Grid
                  ZIndex="{Binding CameraIndex}"
                  Grid.Row="1">
                <cv:CameraView  x:Name="cameraView"
                                VerticalOptions="Fill"
                                HorizontalOptions="Fill"/>

                <Frame CornerRadius="50" x:Name="FrameSwitch"
                       Margin="5"
                       WidthRequest="65"
                       HeightRequest="35"
                       BackgroundColor="#A0111111"
                        VerticalOptions="End"
                        HorizontalOptions="Center" Padding="0,0,0,0"
                       BorderColor="Transparent">
                    <Grid>
                        <Button x:Name="DButton" Clicked="DButton_Clicked"  Text="D" VerticalOptions="Center" HorizontalOptions="Start" CornerRadius="15" BackgroundColor="#000000" TextColor="White"/>
                        <Button x:Name="NButton" Clicked="NButton_Clicked" Text="N" VerticalOptions="Center" HorizontalOptions="End" CornerRadius="15" BackgroundColor="#000000" TextColor="White"/>
                    </Grid>
                </Frame>
            </Grid> 

            <Grid Grid.Row="2" BackgroundColor="#83E9EE" ZIndex="{Binding CameraIndex}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>

                </Grid.ColumnDefinitions>
                <Frame Margin="10" Grid.Column="0" Padding="10,0,10,-2">

                    <Entry x:Name="AreaCodeEntry"
                           IsSpellCheckEnabled="False"
                           Text="{Binding AreaEntry}"
                           HorizontalOptions="FillAndExpand"
                           PlaceholderColor="Black"
                           FontSize="14"/>

                </Frame>
                <Label  Grid.Column="1" 
                        Text="-"
                        FontSize="Large"
                        HorizontalOptions="CenterAndExpand" 
                        VerticalOptions="CenterAndExpand"
                        TextColor="Black"/>

                <Frame Margin="10" Grid.Column="2" Padding="10,0,10,-2">

                    <Entry x:Name="LicensePlateEntry" 
                           IsTextPredictionEnabled="False"
                           Text="{Binding LicensePlateEntry}"
                           PlaceholderColor="Black"
                           FontSize="14"
                           HorizontalOptions="FillAndExpand"/>

                </Frame>
                <Button Clicked="OkButton_Clicked" Margin="10" Text="OK" TextColor="Black" WidthRequest="50" BackgroundColor="#D9D9D9" BorderWidth="1" BorderColor="Black" Grid.Column="3" CornerRadius="100"></Button>
            </Grid>

            <Grid  Grid.Row="3" 
                   BackgroundColor="#83E9EE"
                   ZIndex="{Binding CameraIndex}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button ImageSource="videocamera.png" 
                        MaximumHeightRequest="80" 
                        MaximumWidthRequest="80"
                        BackgroundColor="#D9D9D9"
                        Grid.Column="1" 
                        BorderWidth="1"
                        BorderColor="Black"
                        Clicked="CameraButton_Clicked" 
                        CornerRadius="40"/>

            </Grid>
            <skia:SKCanvasView Grid.Row="1" x:Name="canvasView" VerticalOptions="FillAndExpand" ZIndex="{Binding CameraIndex}" PaintSurface="OnPaintSurface" />
        </Grid>

    </ScrollView>
</ContentPage>