<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MobileApp.Views.VPS53"
             xmlns:viewmodel="clr-namespace:Client.MobileApp.ViewModels"
             x:DataType="viewmodel:VPS53ViewModel"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             xmlns:lottie="http://schemas.airbnb.io/xaml"
             Title="VPS53">
    <ScrollView>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <BoxView
                BackgroundColor="Orange"
                Color="Orange"
                Grid.Row="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"/>

            <cv:CameraView Grid.ColumnSpan="3"  Grid.Row="1" x:Name="cameraView" CamerasLoaded="cameraView_CamerasLoaded"/>

            <Grid  Grid.Row="2" BackgroundColor="Orange">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button ImageSource="videocamera.png" MaximumHeightRequest="100" MaximumWidthRequest="100" BackgroundColor="Gray" Grid.Column="1" Clicked="CameraButton_Clicked" CornerRadius="30"></Button>
                <Button ImageSource="imagegallery.png" MaximumHeightRequest="100" MaximumWidthRequest="100" BackgroundColor="Gray" Grid.Column="2" Clicked="ImageButton_Clicked" CornerRadius="30"></Button>
            </Grid>
        </Grid>

    </ScrollView>

</ContentPage>