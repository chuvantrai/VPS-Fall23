<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MobileApp.Views.VPS53"
             xmlns:viewmodel="clr-namespace:Client.MobileApp.ViewModels"
             x:DataType="viewmodel:VPS53ViewModel"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI">
    <ScrollView>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" BackgroundColor="#FF6B00">
                <Image Source="logo.png"/>
            </Grid>

            <cv:CameraView Grid.Row="1" x:Name="cameraView" CamerasLoaded="cameraView_CamerasLoaded"/>

            <Grid  Grid.Row="2" BackgroundColor="#FF6B00">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button ImageSource="licenseplate.png" MaximumHeightRequest="80" MaximumWidthRequest="80" BackgroundColor="#D9D9D9" Grid.Column="0" Clicked="LincenseButton_Clicked" CornerRadius="40"></Button>
                <Button ImageSource="videocamera.png" MaximumHeightRequest="80" MaximumWidthRequest="80" BackgroundColor="#D9D9D9" Grid.Column="1" Clicked="CameraButton_Clicked" CornerRadius="40"></Button>
                <Button ImageSource="imagegallery.png" MaximumHeightRequest="80" MaximumWidthRequest="80" BackgroundColor="#D9D9D9" Grid.Column="2" Clicked="ImageButton_Clicked" CornerRadius="40"></Button>
            </Grid>
        </Grid>

    </ScrollView>

</ContentPage>